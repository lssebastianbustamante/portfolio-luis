# Portfolio Environment Variables - Example
# Copy this file to .env and update the values

# Database Configuration
MONGO_HOST=mongo-tours
MONGO_DB=tours
MONGO_PORT=27017

MYSQL_HOST=mysql-db
MYSQL_PORT=3306
MYSQL_DATABASE=nestdb
MYSQL_USER=root
MYSQL_PASSWORD=change-this-password

# NATS Configuration
NATS_HOST=nats
NATS_PORT=4222

# API Ports
EXPRESS_API_PORT=8081
NEST_API_PORT=3001
GATEWAY_PORT=1111
CLIENT_PORT=3000

# Environment
NODE_ENV=development

# Frontend API URLs (for production)
NEXT_PUBLIC_API_EXPRESS_URL=http://localhost:8081
NEXT_PUBLIC_API_NEST_URL=http://localhost:3001
NEXT_PUBLIC_GATEWAY_URL=http://localhost:1111

# Google Maps (optional - get your key from Google Cloud Console)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Security (generate strong passwords for production)
JWT_SECRET=your-jwt-secret-here
ENCRYPT_SECRET=your-encryption-secret-here
